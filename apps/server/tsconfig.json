{
  "extends": "@workspace/typescript-config/nest",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@db/*": ["database/*"],
      "@utils/*": ["src/utils/*"]
    },
    "plugins": [{ "name": "nestjs" }]
  },
  "include": ["src/**/*", "database/**/*", "src/utils/**/*", "seed.ts"],
  "exclude": ["dist", "node_modules"]
}
