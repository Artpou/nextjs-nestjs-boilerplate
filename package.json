{
  "name": "turborepo-basic-shared",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "pnpm turbo run build",
    "dev": "pnpm turbo run dev --parallel",
    "lint": "pnpm turbo run lint",
    "lint:fix": "pnpm turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "generate-schema": "pnpm turbo run generate-schema --filter=server",
    "init": "./scripts/init.sh",
    "clean": "pnpm turbo run clean",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": [
      "biome check --write"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "@types/node": "catalog:",
    "husky": "^9.1.7",
    "lint-staged": "^13.1.0",
    "turbo": "^2.5.5",
    "typescript": "catalog:"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@9.14.4",
  "trustedDependencies": [
    "@nestjs/core"
  ]
}
